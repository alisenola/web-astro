	.project-image-frame {
		width: 320px;
		height: 200px;
	}

	.project-image {
		display: none;
		width: 320px;
		height: 200px;
	}

	.project-title {
		font-family: 'Catamaran', sans-serif;
		margin: 12px 12px 0px;
		color: #333;
		font-size: 20px;
	}

	.project-tags {
		margin: 4px 9px 14px;
	}

	.tag {
		font-family: 'Catamaran', sans-serif;
		position: relative;
		font-weight: 600;
		display: inline-block;
		font-size: 16px;
		padding: 2px 5px;
		color: #888;
		background: #fafafa;
		border-radius: 4px;
		margin: 0px 3px;

		transition: all 0.2s ease;
	}

	.project-tile:hover .tag {
		color: #333;
		background: #f0f0f0;
	}

	.project-badges {
		position: absolute;
		top: 10px;
		left: 8px;
		display: flex;
		
	}

	.badge {
		color: #fff;
		padding: 5px 8px 3px 8px;
		font-weight: 500;
		font-size: 14px;
		border-radius: 5px;
		margin: 0px 2px;

		transition: all 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.0);
	}

	.badge.commercial {
		background: #3b64a0;
	}

	@media (max-width: 776px) {
		.project-tile {
			width: calc(100% - 20px);
			padding: 0 10px;
			max-width: 320px;
			margin: -10px auto;
			overflow: hidden;
		}

		.project-tile::before {
			bottom: -10px;
		}

		.project-tile:hover::before {
			box-shadow: inset 0px 0px 0px 20px white;
			border-radius: 25px;
		}
	}

	@media (min-width: 2101px) {
		.project-tile, .project-tile-image {
			width: 360px;
			height: 260px;
		}

		.project-tile:not(.inactive):hover::before {
			box-shadow: inset 0 0 0 30px white;
			border-radius: 35px;
		}

		.project-badge {
			top: 20px;
			left: 20px;
		}
	}
</style>