---
const { projectName, projectData } = Astro.props
---
<div class="tile-wrapper">
	<!-- <a href={"/projects/" + projectName}> -->
		<a href={"/projects/" + projectName} class="project-tile">
			<div class="project-image-frame">
				<img
					src={"/assets/projects/" + projectName + "/thumb.jpg"}
					alt={projectName}
					class="project-image"
					onload="fadeIn(this);"
				/>
			</div>
			<div class="project-title">
				{projectData.title}
			</div>
			<div class="project-tags">
				{projectData.tags.map((tag) => {
					return <span class="tag">{tag}</span>;
				})}
			</div>

			{'badge' in projectData && (
				<Fragment>
					<div class="project-badges">
						<span class={`badge ${projectData.badge.toLowerCase()}`}>{projectData.badge}</span>
					</div>
				</Fragment>
			)}
			</a>
	<!-- </a> -->
</div>

<style>
	.tile-wrapper {
		position: relative;
	}

	.project-tile {
		display: flex;
		flex-direction: column;
		/* justify-content: center; */

		position: relative;
		margin: 10px;
		width: 320px;
		/* height: 231px; */

		background: #fff;
		border: #ccc solid 1px;
		border-radius: 5px;
		
		box-shadow: 0px 0px 0px 0px rgba(0, 0, 0, 0);
		transition: all 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275);

		/* background: #f0f0f0; */
		/* background-position: center; */
		/* background-repeat: no-repeat; */
		/* background-size: 100px; */
	}

	.project-tile:hover {
		border-color: #888;
		box-shadow: 0px 0px 0px 6px rgba(0, 0, 0, 0.08);
	}

