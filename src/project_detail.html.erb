<% content_for(:title, project.title) %>
<div class="project-detail-wrapper">
	<div class="project-detail">

		<!-- Title -->
		<h1 class="project-title"><%= project.title %></h1>

		<!-- Links -->
		<% if project.links.present? %>
			<div class="link-box">
			<% project.links.each  do |link| %>
				<a href=<%= link.link %> class="link-item tile">
					<% if link.icon.present? %>
						<div class="tile-icon"><img src="/assets/svg/<%= link.icon %>"></div>
					<% end %>
					<%= link.title %>
				</a>
			<% end %>
			</div>
		<% end %>

		<!-- Tags -->
		<div class="project-tags">
			<% project.tags.each do |tag| %>
				<div class="project-tag"><%= tag %></div>
			<% end %>
		</div>

		<!-- Content blocks -->
		<% project.page.each_with_index  do |item, index| %>
			<%= partial "partials/content_blocks/#{item.type}", :locals => {
				:project_name => project_name,
				:item => item,
				:index => index
			} %>
		<% end %>

	</div>
</div>
<div class="back-to-projects-wrapper">
	<%= partial 'partials/projects_button', :locals => {
		:text => 'Back to projects'
	} %>
</div>
<%= javascript_include_tag  'project_detail' %>